/* pages/info/info.wxss */
page{
	width: 100%;
	height: 100%;
}
#scrollNavi{
	width: 100%;
	height: 88rpx;
	display: inline-block;
	white-space: nowrap; 
	box-shadow: 0px 0px 5px 1px #aaa;
}
#scrollNavi .item{
	width: 25%;
	height: 85rpx;
	line-height: 85rpx;
	vertical-align: center;
	text-align: center;
	display: inline-block;
	color:#aaa;
	font-weight: lighter;
}
#scrollNavi .selected-item{
	width: 25%;
	height: 85rpx;
	line-height: 85rpx;
	vertical-align: center;
	text-align: center;
	display: inline-block;
	color:#000;
	font-weight: normal;
	border-bottom:5px solid #000;
}

#infoBox{
	width: 100%;
}
#infoBox .item-box{
	width: 100%;
	height: 50%;
	display: flex;
	flex-direction: row;
	padding: 10px;
	border-bottom:1px solid #eee;
}
#infoBox .item-box .lefty{
	width: 70%;
}
#infoBox .item-box .lefty .theme-box{
	width: 100%;
	height: 50%;
	font-size: 14px;
}
#infoBox .item-box .lefty .info-box{
	width: 100%;
	height: 50%;
	font-size: 12px;
	color:#aaa;
}
#infoBox .item-box .lefty .info-box .date{
	height: 100%;
	line-height: 40px;
	vertical-align: bottom;
}
#infoBox .item-box .lefty{
	width: 70%;
}
#infoBox .item-box .righty{
	width: 25%;
	height: 100%;
	text-align: left;
}
#infoBox .item-box .righty image{
	width: 100%;
	height: 100%;
}

/**没有更多信息提示*/
#newsNumTip{
	width: 100%;
	height: 20px;
	text-align: center;
	color:#aaa;
	line-height: 20px;
	font-size: 12px;
	margin-bottom: 10px;
	margin-top: 20px;
}