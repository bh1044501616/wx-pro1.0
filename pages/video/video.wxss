/* 下载页面 */
#downloadPage .downloading{
	border-radius: 5px;
	background-color: #fff;
	width: 96%;
	display: block;
	margin: auto;
	margin-top: 4px;
}
#downloadPage .downloading>.title{
	display: flex;
	flex-direction: row;
	font-size: 10px;
}
#downloadPage .downloading>.title view{
	width: 50%;
	color: #555;
	padding: 5px;
}
#downloadPage .downloading .title .method{
	text-align: right;
	color:#1aac19;
}
#downloadPage .downloading>.content{
	display: flex;
	flex-direction:row;
	align-items: center;
}
#downloadPage .downloading>.content>.icon{
	width:15%;
}
#downloadPage .downloading>.content>.icon image{
	width: 100%;
	height: 100%;
	border-radius: 7px;
	margin-top: 3px;
}
#downloadPage .downloading>.content>.fileInfo{
	width: 55%;
	font-size:10px;
}
#downloadPage .downloading>.content>.button{
	width: 10%;
	text-align: right;
}
#downloadPage .downloading>.content>.button image{
	width:40%;
	height:40%;
}
#downloadPage .downloading>.content>.manage{
	width: 20%;
}
#downloadPage .downloading>.content>.manage view{
	width: 80%;
	font-size: 13px;
	border-radius: 10px;
	border: 1px solid #1aac19;
	text-align: center;
	color:#1aac19;
	margin: auto;
}
